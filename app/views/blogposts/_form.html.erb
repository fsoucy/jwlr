
<div class="pure-g log-in">
  <div class="pure-u-1 pure-u-md-1-3"></div>
  <div class="pure-u-1 pure-u-md-1-3 log-in-form">
    <%= form_for @blogpost, url: login_path, html: {class: "pure-form pure-form-stacked"} do |f| %>
    <fieldset>
	  <legend>Blogpost</legend>
	  <%= f.text_field :title, placeholder: 'Title' %>
	  <%= f.text_area :content, placeholder: 'What do you want to say?' %>
	  <% if @has %>
	  <%= label_tag :store_id, "Post" %>
	  <%= select_tag :store_id, options_for_select(@stos, @default) %>
	  <% end %>
	  <%= f.submit "Save Blogpost", class: 'pure-button pure-button-primary' %>
    </fieldset>
    <% end %>
      </div>
  <div class="pure-u-1 pure-u-md-1-3"></div>
</div>
