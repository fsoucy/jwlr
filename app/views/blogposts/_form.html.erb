    <%= form_for(@blogpost, :html => { class: 'blogger'}) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :title, "Title" %><br>
      <%= f.text_field :title, class: 'form-control' %><br>
      <%= f.label :content, "Content" %><br>
      <%= f.text_area :content, class: 'form-control' %><br>
      <% if @has %>
      <%= label_tag :store_id, "Poster" %><br>
      <%= select_tag :store_id, options_for_select(@stos, @default) %><br>
      <% end %>
      <%= f.submit "Save Blogpost", class: "btn btn-primary" %>
    <% end %>

