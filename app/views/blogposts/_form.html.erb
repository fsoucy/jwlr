<div class="pure-g log-in">
<div class="pure-u-1 pure-u-md-1-3"></div>
<div class="pure-u-1 pure-u-md-1-3 log-in-form">
    <%= form_for(@blogpost, :html => { class: 'pure-form pure-form-stacked'}) do |f| %>
      <fieldset>
      <legend>New blogpost</legend>
      <%= render 'shared/error_messages', object: f.object %>

      <%= f.text_field :title, :placeholder => "Title" %>
      <%= f.text_area :content, :placeholder => "Content" %>
      <% if @has %>
      <%= label_tag :store_id, "Poster" %>
      <%= select_tag :store_id, options_for_select(@stos, @default) %>
      <% end %>
      <%= f.submit "Save Blogpost", class: "pure-button pure-button-primary" %>
      </fieldset>
    <% end %>
</div>
<div class="pure-u-1 pure-u-md-1-3"></div>
</div>
