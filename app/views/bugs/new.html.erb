<div class="pure-g log-in">
<div class="pure-u-1 pure-u-md-1-3"></div>
<div class="pure-u-1 pure-u-md-1-3 log-in-form">
<%= form_for @bug, html: {class: "pure-form pure-form-stacked"} do |f| %>
<fieldset>
<legend>Report a bug</legend>
<%= f.text_field :title, placeholder: "Provide a title for your bug report" %>

<%= f.text_field :url, placeholder: "URL for your bug report (optional)" %>

<%= f.text_area :content, placeholder: "Write a message describing your issue" %>

<%= f.submit "Report bug", class: "pure-button pure-button-primary" %>
</fieldset>
<% end %>
</div>
<div class="pure-u-1 pure-u-md-1-3"></div>
</div>
