<% if current_user.id == @completed_deal.buyer_id %>
  <%= form_for(@completed_deal) do |f| %>
    <div><%= f.hidden_field :fulfilled_buyer, true %></div>
    <%= f.submit "Fulfilled Deal", class: "btn btn-primary" %>
  <% end %>
<% elsif current_user.id == @completed_deal.seller_id %>
  <%= form_for(@completed_deal) do |f| %>
    <div><%= f.hidden_field :fulfilled_seller, true %></div>
    <%= f.submit "Fulfilled Deal", class: "btn btn-primary" %>
  <% end %>
<% end %>
