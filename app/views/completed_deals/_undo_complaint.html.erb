<% if current_user.id == @completed_deal.buyer_id && @completed_deal.complaint_buyer %>
  <%= form_for(@completed_deal) do |f|%>
    <div><%= f.hidden_field :complaint_buyer, :value => false %></div>
    <%=f.submit "Remove Complaint", class: "btn btn-primary" %>
  <% end %>
<% elsif current_user.id == @completed_deal.seller_id && @completed_deal.complaint_seller%>
  <%= form_for(@completed_deal) do |f| %>
    <div><%= f.hidden_field :complaint_seller, :value => false %></div>
    <%=f.submit "Remove Complaint", class: "btn btn-primary" %>
  <% end %>
<% end %>
