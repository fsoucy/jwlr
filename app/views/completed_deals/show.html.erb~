<% provide(:title, "Completed Deal") %>
<% if !@completed_deal.complaint_buyer && !@completed_deal.complaint_seller %>
  <% if !@completed_deal.fulfilled %>
    <% if current_user.id == @completed_deal.seller_id %>
      <h3>Congratulations! You are selling <%= @completed_deal.commodity.downcase %> to <%= @completed_deal.buyer.name %>.</h3>
      <h3><%= @completed_deal.buyer.name %> will arrive at <%= @completed_deal.location %> at this datetime: <%= PendingDeal.find(@completed_deal.pending_deal_id).buyer_datetime %>, according to the priorly arranged agreement.</h3>
      <h3>The buyer will pick up the product at this time and pay you $<%= @completed_deal.price %></h3>
    <% elsif current_user.id == @completed_deal.buyer_id %>
      <h3>Congratulations! You are buying <%= @completed_deal.commodity.downcase %> from <%= @completed_deal.seller.name %>.</h3>
      <h3>You need to arrive at <%= @completed_deal.location %> at this datetime: <%= PendingDeal.find(@completed_deal.pending_deal_id).buyer_datetime %>, according to the priorly arranged agreement.</h3>
      <h3>You will need to pick up the product at this time and pay the seller $<%= @completed_deal.price %></h3>
  <% else %>
      <h3>Why are you on this page!?!?!</h3>
    <% end %>
    <div class="container">
      <div class="row">
        <div class="col-md-6">
          <%= render 'fulfilled' %>
        </div>
        <div class="col-md-6">
          <%= render 'complaint' %>
        </div>
      </div>
    </div>
  <% else %>
    <% if current_user.id == @completed_deal.seller_id %>
      <h3>Congratulations! You have successfully sold <%= @completed_deal.commodity.downcase %> to <%= @completed_deal.buyer.name %>.</h3>
    <% elsif current_user.id == @completed_deal.buyer_id %>
      <h3>Congratulations! You have successfully bought <%= @completed_deal.commodity.downcase %> from <%= @completed_deal.seller.name %>.</h3>
    <% else %>
      <h3>How did you get on this page!?!?!</h3>
    <% end %>
  <% end %>
<% else %>
  <h3>There has been a complaint registered, concerning the deal between <%= completed_deal.seller.name %> and <%= completed_deal.buyer.name %></h3>
  <h3>Administration is currently handling this issue.</h3>
  <%= render 'undo_complaint' %>
<% end %>
