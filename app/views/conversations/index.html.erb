
    <h1>Conversations</h1>
    <% @conversations.each do |conversation| %>
    <div class="pure-g">
    <div class="conversations_indexing pure-u-1 pure-u-md-1-3 convo_index_page">
    <a href="<%= conversation_url(conversation) %>">
      
        <% if conversation.first_user_id == current_user.id %>
        <h3><%= conversation.second_user.name %></h3>
	<%= image_tag conversation.second_user.profile_picture(:thumb) %>
        <% else %>
        <h3><%= conversation.first_user.name %></h3>
	<%= image_tag conversation.first_user.profile_picture(:thumb) %>
        <% end %>
        <p>
          <% message = conversation.messages.order(created_at: :desc).limit(1).first %>    
          <%= message.content %>
          <br>
	  Sent <%= message.created_at.strftime("%A") + ", " + message.created_at.strftime("%m/%d/%y") + " " + message.created_at.strftime("at %I:%M%p") %>
        </p>
	<%= hidden_field_tag :conversation_id, conversation.id, class: 'conversation_id' %>
      </a>
    </div>
    <div class="pure-u-1 pure-u-md-1-3 big"></div>
    </div>
    <% end %>

