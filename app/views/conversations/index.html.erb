
<div class="pure-g pad-box">
  <div class="pure-u-1-3">
    <h1>Conversations</h1>
    <% @conversations.each do |conversation| %>
    <div class="conversations_indexing">
    <a href="<%= conversation_url(conversation) %>">
      
        <% if conversation.first_user_id == current_user.id %>
        <h3><%= conversation.second_user.name %></h3>
	<%= image_tag conversation.second_user.profile_picture(:thumb) %>
        <% else %>
        <h3><%= conversation.first_user.name %></h3>
	<%= image_tag conversation.first_user.profile_picture(:thumb) %>
        <% end %>
        <p>
          <% message = conversation.messages.order(created_at: :desc).limit(1).first %>    
          <%= message.content %>
          <br>
	  Sent <%= message.created_at.strftime("%A") + ", " + message.created_at.strftime("%m/%d/%y") +\
		      " " + message.created_at.strftime("at %I:%M%p") %>
        </p>
      </a>
    <br>
    </div>
    <% end %>
  </div>
  <div class="pure-u-2-3"></div>
</div>
