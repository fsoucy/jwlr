<div class="massage_container">
  <ul class="massages">
    <%= render @messages %>
  </ul>
</div>

<div class="form_fields">
<%= form_for @msg do |f| %>
<%= f.hidden_field :sender_id, value: current_user.id %>
<% first_user_id = @conversation.first_user_id %>
<% second_user_id = @conversation.second_user_id %>
<% if current_user.id == first_user_id %>
<% other = second_user_id %>
<% else %>
<% other = first_user_id %>
<% end %>
<%= f.hidden_field :other_id, value: other %>
<%= f.text_area :content, class: "form_input", placeholder: "Write your message here..." %>
<br>
<%= f.submit "Send", class: "form_submit" %>
<% end %>
</div>
