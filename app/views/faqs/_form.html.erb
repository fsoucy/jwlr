<div class="pure-g log-in">
  <div class="pure-u-1 pure-u-md-1-3"></div>
  <div class="pure-u-1 pure-u-md-1-3 log-in-form">
    <%= form_for(@faq, html: {class: "pure-form pure-form-stacked"}) do |f| %>
      <fieldset>
        <legend>FAQ</legend>
        <%= render 'shared/error_messages', object: f.object %>

        <%= f.text_field :question, placeholder: "Question" %>

        <%= f.text_area :answer, placeholder: "Answer" %>

        <%= f.submit "Save FAQ", class: "pure-button pure-button-primary" %>
      </fieldset>
    <% end %>
  </div>
  <div class="pure-u-1 pure-u-md-1-3"></div>
</div>

