<div class="pure-g">
  <div class="pure-u-1 pure-u-md-1-3">
    <% @groups.each do |group| %>
      <div class="group">
        <h3><%= group.name %></h3>
      </div>
    <% end %>
  </div>
  <div class="pure-u-1 pure-u-md-2-3">
    <% if !@groups.first.nil? %>
      <%= render @groups.first %>
    <% end %>
  </div>
</div>
