<div class="pure-g log-in">
  <div class="pure-u-1 pure-u-md-1-3"></div>
    <div class="pure-u-1 pure-u-md-1-3 log-in-form">
      <%= form_for(:password_reset, url: password_resets_path, html: {class: "pure-form pure-form-stacked"}) do |f| %>
        <fieldset>
          <legend>Forgot password</legend>
          <%= f.email_field :email, placeholder: 'Email Address' %>
      
          <%= f.submit "Submit", class: "pure-button pure-button-primary" %>
        </fieldset>
      <% end %>
    </div>
  </div>
</div>
