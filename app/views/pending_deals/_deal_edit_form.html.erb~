<% if !@deal.completed %>
  <% if current_user.id == @deal.buyer_id %>
    <h1>Buyer Preferences</h1>
    <%= form_for(@deal) do |f| %>
      <%= f.label :buyer_price, "Price" %>
      <%= f.number_field :buyer_price %>

      <% if @public %>
      <%= f.label :buyer_exchange, "Exchange Method" %>
      <%= f.select :buyer_exchange, options_for_select([["Pickup", "Pickup"],
	["Dropoff", "Dropoff"]], @deal.buyer_exchange) %>
    
      <%= f.label :buyer_datetime, "Exchange Time" %>
      <%= f.datetime_select :buyer_datetime, prompt: {month: "Choose month", day: "Choose day", year: "Choose year", hour: "Choose hour", minute: "Chose minute" } %>
    
      <% end %>
      <%= f.submit "Change", class: "btn btn-primary" %>
    <% end %>
  <% else %>
    <h1>Seller Preferences</h1>
    <%= form_for(@deal) do |f| %>
      <%= f.label :seller_price, "Price" %>
       <%= f.number_field :seller_price %>

      <% if @public %>
      <%= f.label :seller_exchange, "Exchange Method" %>
      <%= f.select :seller_exchange, options_for_select([["Pickup", "Pickup"],
	["Dropoff", "Dropoff"]], @deal.seller_exchange) %>

      <%= f.label :seller_datetime, "Exchange Time" %>
      <%= f.datetime_field :seller_datetime %>
      <% end %>
      
      <%= f.submit "Change", class: "btn btn-primary" %>
    <% end %>
  <% end %>
<% else %>
  <% if current_user.id == @deal.seller_id %>
  <h1>Seller Preferences</h1>

  <p>Price: <%= @deal.seller_price %></p>
  
  <% if @public %>
  <p>Exchange Type: <%= @deal.seller_exchange %></p>
  <p>Exchange Time: <%= @deal.seller_datetime %></p>
  <% end %>
  <% else %>
  <h1>Buyer Preferences</h1>
  <p>Price: <%= @deal.buyer_price %></p>

  <% if @public %>
  <p>Exchange Type: <%= @deal.buyer_exchange %></p>
  <p>Exchange Time: <%= @deal.buyer_datetime %></p>
  <% end %>
  <% end %>
<% end %>
