<% if current_user.id == pending_deal.buyer_id %>
  <% text =  "Buying " + Product.find(pending_deal.product_id).commodity.downcase + "from " + User.find(pending_deal.seller_id).name + ", currently priced at $" + pending_deal.seller_price.to_s + "."  %>
<% else %>
  <% text = "Selling " + Product.find(pending_deal.product_id).commodity.downcase + "to " + User.find(pending_deal.buyer_id).name + ", currently priced at $" + pending_deal.seller_price.to_s + "." %>
<% end %>

<%= link_to text, pending_deal %>
