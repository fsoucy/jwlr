<div class="form_fields">
<%= form_for(@product,  html: { multipart: true}) do |f| %>
<%= render 'shared/error_messages', object: f.object %>

<%= f.label :category_id, "Product Type" %>
<%= f.select :category_id, nested_dropdown(Category.where(:parent_id => nil), true) %>
<br>

<%= f.text_field :title, class: 'form_input', placeholder: 'Title' %>
<br>

<%= f.number_field :price, class: 'form_input', placeholder: 'Price' %>
<br>

<% if @has %>
<%= f.label :store_id, "Store of Product" %>
<%= f.select :store_id, options_for_select(@stos, @default) %>
<% else %>
<%= f.text_field :full_street_address, class: 'form_input', placeholder: 'Full street address of product' %>
<% end %>      
<br>


<%= f.text_area :description, class: 'form_input', placeholder: 'Description of product' %>
<br>

<%= f.label :delivery_cost, "Planning on adding a delivery cost? Specify that here. If not, just leave this unchanged." %>
<% if @product.delivery_cost.nil? %>
<%= f.number_field :delivery_cost, value: current_user.default_delivery_cost, class: 'form_input' %>
<% else %>
<%= f.number_field :delivery_cost, class: 'form_input' %>
<% end %>
<br>
<%= f.submit "Upload product", class: "form_submit" %>
<% end %>
</div>
