    <% end %>
    Thingypoo <input class="toggle" type="checkbox" name="thing" value="thingypoo"><br>
    </p>
    <h2>Price</h2>
    <p>
    <% @prices.rows.each do |facet| %>
      <%= number_to_currency(facet.value.to_s.split('..')[0]) %> - <%= number_to_currency(facet.value.to_s.split('..')[1]) %> (<%= facet.count %>): <input class="toggle" type="checkbox" id="price" name="price" value="<%= facet.value %>" >
    <% end %>
    </p>
  </div>
</div>
<div class="search_results">
  <% @results.each do |prod| %>
    <div class="result">
      <div class="image_container_search">
        <%= image_tag prod.picture_url(:thumb), class: "product_image_search" %>
      </div>
      <div class="image_container_search">
	<%= image_tag prod.picture_url(:thumb), class: "product_image_search" %>
      </div>
      <div class="info_container">
        <%= link_to prod.title, prod, class: "title_link" %>          
        <h3><%= number_to_currency(prod.price) %></h3>
        <h4>Location: <%= Geocoder.address([prod.latitude, prod.longitude]) %></h4>
        <% if logged_in? %>
          <h4>Distance from me: <%= prod.distance_to(current_user, :mi).round %> Miles</h4>
        <% else %>
          <h4>Distance from me: <%= prod.distance_to([request.location.latitude, request.location.longitude], :mi).round %> Miles</h4>
        <% end %>
      </div>
    </div>
  <% end %>
  <%= will_paginate @results %>
  <% end %>
</div>
