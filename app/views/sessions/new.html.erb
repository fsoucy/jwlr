<div class="pure-g log-in">
  <div class="pure-u-1 pure-u-md-1-3"></div>
    <div class="pure-u-1 pure-u-md-1-3 log-in-form">
      <%= form_for :session, url: login_path, html: {class: "pure-form pure-form-stacked"} do |f| %>
        <fieldset>
          <legend>Log In</legend>
          <%= f.email_field :email, placeholder: 'Email' %>
          <%= f.password_field :password, placeholder: 'Password' %>
          <%= link_to "(forgot password)", new_password_reset_path %>
          <label class="pure-checkbox" for="session_remember_me">
            <%= f.check_box :remember_me, class: "pure-checkbox" %> Remember me
          </label>
          <%= f.submit "Log in", class: "pure-button pure-button-primary" %>
        </fieldset>
      <% end %>
      <p>New user? <%= link_to "Sign up now!", signup_path %></p>
    </div>
  <div class="pure-u-1 pure-u-md-1-3"></div>
</div>
