
<% provide(:title, "Create a new status") %>
<h1>Create a new status.</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@status) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      
      <%= f.label :category_id, "Product Type" %>
      <%= f.select :category_id, nested_dropdown(Category.where(:parent_id => nil)) %>
      
      <%= f.label :minPrice, "Minimum Price" %>
      <%= f.number_field :minPrice, class: 'form-control' %>
      
      <%= f.label :maxPrice, "Maximum Price" %>
      <%= f.number_field :maxPrice, class: 'form-control' %>
      
      <%= f.label :full_street_address, "Address" %>
      <%= f.text_field :full_street_address, class: 'form-control' %>
      
      <%= f.label :toTravel, "Miles Willing to Travel" %>
      <%= f.number_field :toTravel, class: 'form-control' %>

      <%= f.label :description, "Description/Keywords" %>
      <%= f.text_field :description, class: 'form-control' %>
      
      <%= f.label :buying, class: "checkbox inline" do %>
        <%= f.check_box :buying %>
	<span><b>Select if looking to buy</b></span>
      <% end %>

      <%= f.submit "Create status", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
