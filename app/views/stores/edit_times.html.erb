<% provide(:title, "Edit hours of operation") %>
<div class="pure-g log-in">
  <div class="pure-u-1 pure-u-md-1-3"></div>
  <div class="pure-u-1 pure-u-md-1-3 log-in-form">
    <h1>Edit this store's hours of operation</h1>
    
    <%= form_for(@store, :html => { class: 'edit_times_inline'}) do |f| %>
    <%= render 'shared/error_messages', object: f.object %>
    
    <% if @store.mondayopen %>
    <p>
      <b>Mon. Start Time:</b>
      <%= f.select :mondaystarthour, options_for_select(@hours, @store.mondaystarthour.nil? ? -1 : @store.mondaystarthour) %>
      <%= f.select :mondaystartminute, options_for_select(@minutes, @store.mondaystartminute.nil? ? -1 : @store.mondaystartminute) %>
      <%= f.select :mondaystartampm, options_for_select([["AM", "AM"], ["PM", "PM"]], @store.mondaystartampm.nil? ? "AM" : @store.mondaystartampm) %>
    </p>
    <p>
      <b>Mon. End Time:</b>
      
      <%= f.select :mondayendhour, options_for_select(@hours, @store.mondayendhour.nil? ? -1 : @store.mondayendhour) %>
      
      <%= f.select :mondayendminute, options_for_select(@minutes, @store.mondayendminute.nil? ? -1 : @store.mondayendminute) %>
      <%= f.select :mondayendampm, options_for_select([["AM", "AM"], ["PM", "PM"]], @store.mondayendampm.nil? ? "PM" : @store.mondayendampm) %>
