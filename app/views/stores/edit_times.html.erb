      <%= f.select :tuesdayendhour, options_for_select(@hours, @store.tuesdayendhour.nil? ? -1 : @store.tuesdayendhour), {}, { class: "end_hour" } %>
      <%= f.select :tuesdayendminute, options_for_select(@minutes, @store.tuesdayendminute.nil? ? -1 : @store.tuesdayendminute), {}, { class: "end_minute" } %>
      </span>
      <br>
      <% end %>
    
    <% if @store.wednesdayopen %>
