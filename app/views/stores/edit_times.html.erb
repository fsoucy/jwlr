<% provide(:title, "Edit hours of operation") %>
<div class="pure-g log-in">
  <div class="pure-u-1 pure-u-md-1-3"></div>
  <div class="pure-u-1 pure-u-md-1-3 log-in-form">
    <h1>Edit this store's hours of operation</h1>
    
    <%= form_for(@store, :html => { class: 'pure-form pure-form-stacked edit_times_form'}) do |f| %>
    <%= render 'shared/error_messages', object: f.object %>
    <fieldset>
    <% if @store.mondayopen %>
    <label for="monday_start">Mon. Start Time:</label>
      <span class="times_right">
      <%= f.select :mondaystarthour, options_for_select(@hours, @store.mondaystarthour.nil? ? -1 : @store.mondaystarthour), {}, { class: "start_hour", id: "monday_start_hour" } %>
      <%= f.select :mondaystartminute, options_for_select(@minutes, @store.mondaystartminute.nil? ? -1 : @store.mondaystartminute), {}, { class: "start_minute", id: "monday_start_minute" } %>
      </span>
      <br>
      <label for="monday_end">Mon. End Time:</label>      
      <span class="times_right">
      <%= f.select :mondayendhour, options_for_select(@hours, @store.mondayendhour.nil? ? -1 : @store.mondayendhour), {}, { class: "end_hour" } %>      
      <%= f.select :mondayendminute, options_for_select(@minutes, @store.mondayendminute.nil? ? -1 : @store.mondayendminute), {}, { class: "end_minute" } %>
      </span>
      <br>
    <% end %>
      
    <% if @store.tuesdayopen %>
      <label for="tuesday_start">Tues. Start Time:</label>
      <span class="times_right">
      <%= f.select :tuesdaystarthour, options_for_select(@hours, @store.tuesdaystarthour.nil? ? -1 : @store.tuesdaystarthour), {}, { class: "start_hour" }%>      
      <%= f.select :tuesdaystartminute, options_for_select(@minutes, @store.tuesdaystartminute.nil? ? -1 : @store.tuesdaystartminute), {}, { class: "start_minute" } %>
      </span>
      <br>
      <label for="tuesday_end">Tues. End Time:</label>
