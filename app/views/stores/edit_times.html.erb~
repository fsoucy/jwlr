<% provide(:title, "Edit hours of operation") %>
<h1>Edit this store's hours of operation</h1>

    <%= form_for(@store) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <% if @store.mondayopen %>
        <p>Monday Start Time:</p>
        <center>
	<div class = "row">
	  <div class="col-md-3">
	    <%= f.select :mondaystarthour, options_for_select(@hours, 1) %>
	  </div>
	  <div class="col-md-3">
	    <%= f.select :mondaystartminute, options_for_select(@minutes, 1) %>
	  </div>
	  <div class="col-md-3">
	    <%= f.select :mondaystartampm, options_for_select([["AM", "AM"], ["PM", "PM"]], "AM") %>
	  </div>
	</div>
	</center>
      <% end %>
      
      
      <%= f.submit "Save changes", class: "btn btn-primary" %>
    <% end %>

