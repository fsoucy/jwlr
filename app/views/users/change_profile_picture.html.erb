<div class="form-g log-in">
<div class="pure-u-1 pure-u-md-1-3"></div>
<div class="pure-u-1 pure-u-md-1-3 log-in-form">

    <%= form_for @user, html: {class: "pure-form pure-form-stacked"} do |f| %>
      <fieldset>
      <legend>Update your profile picture</legend>
      <%= render 'shared/error_messages', object: f.object %>

        <%= f.label :profile_picture, "Upload Profile Picture" %>
        <%= f.file_field :profile_picture, :required => true %>

        <%= f.submit "Change profile picture", class: "pure-button pure-button-primary" %>
      </fieldset>
    <% end %>
</div>
<div class="pure-u-1 pure-u-md-1-3"></div>
</div>

