<div class="form-g log-in">
<div class="pure-u-1 pure-u-md-1-3"></div>
<div class="pure-u-1 pure-u-md-1-3 log-in-form">

    <%= form_for @user, html: {class: "pure-form pure-form-stacked"} do |f| %>
      <fieldset>
      <legend>Update your profile</legend>
      <%= render 'shared/error_messages', object: f.object %>

        <%= f.label :profile_picture, "Upload Profile Picture" %>
        <%= f.file_field :profile_picture, :required => true %>
      
        <%= f.text_field :name, placeholder: 'Your name', :required => true %>

        <%= f.email_field :email, placeholder: 'Email', :required => true  %>

        <%= f.password_field :password, placeholder: 'Password', :required => true %>

        <%= f.password_field :password_confirmation, placeholder: 'Password Confirmation', :required => true %>

	<%= f.label :acceptance_percentage, "Planning on negotiating prices with users? Add a minimum offer percentage." %>
	
        <%= f.label :default_delivery_cost, "Planning on delivering products to your customers? Add a default delivery cost." %>
        <label>
          $ <%= f.number_field :default_delivery_cost, placeholder: 'Default delivery cost' %>
        </label>
        
        <%= f.submit "Save changes", class: "pure-button pure-button-primary" %>
      </fieldset>
    <% end %>
</div>
<div class="pure-u-1 pure-u-md-1-3"></div>
</div>
