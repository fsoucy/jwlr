<div class="form-g log-in">
<div class="pure-u-1 pure-u-md-1-3"></div>
<div class="pure-u-1 pure-u-md-1-3 log-in-form">

    <%= form_for @user, html: {class: "pure-form pure-form-stacked"} do |f| %>
      <fieldset>
      <legend>Update your profile</legend>
      <%= render 'shared/error_messages', object: f.object %>      
        <%= f.text_field :name, placeholder: 'Your name', :required => true %>

        <%= f.email_field :email, placeholder: 'Email', :required => true  %>
        <%= f.submit "Save changes", class: "pure-button pure-button-primary" %>
      </fieldset>
    <% end %>
</div>
<div class="pure-u-1 pure-u-md-1-3"></div>
</div>
