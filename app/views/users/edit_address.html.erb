<div class="form-g log-in">
<div class="pure-u-1 pure-u-md-1-3"></div>
<div class="pure-u-1 pure-u-md-1-3 log-in-form">

    <%= form_for @user, html: {class: "pure-form pure-form-stacked"} do |f| %>
      <fieldset>
      <legend>Update your address</legend>
        <%= f.text_field :address_line_1, placeholder: "Address Line One", :required => true %>
        <%= f.text_field :address_line_2, placeholder: "Address Line Two", :required => false %>
        <%= f.text_field :city, placeholder: "City", :required => true %>
        <%= f.text_field :state, placeholder: "State", :required => true %>
        <%= f.text_field :zipcode, placeholder: "Zipcode", :required => true %>
        <%= f.submit "Save changes", class: "pure-button pure-button-primary" %>
      </fieldset>
    <% end %>
</div>
<div class="pure-u-1 pure-u-md-1-3"></div>
</div>
