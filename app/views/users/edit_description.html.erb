<% provide(:title, "Edit description") %>


<div class="pure-g log-in">
  <div class="pure-u-1 pure-u-md-1-3"></div>
  <div class="pure-u-1 pure-u-md-1-3 log-in-form">
    <%= form_for @user,  html: {class: "pure-form pure-form-stacked"} do |f| %>
    <fieldset>
      <legend>Say something about yourself.</legend>
    <%= render 'shared/error_messages', object: f.object %>
    
    <%= f.label :description %>
    
    <%= f.text_area :description, class: 'form-control' %>
    
    <%= f.submit "Save changes", class: "pure-button pure-button-primary" %>
    </fieldset>
    <% end %>
  </div>
  <div class="pure-u-1 pure-u-md-1-3"></div>
</div>
