<% provide(:title, 'Sign up') %>
<h1>Sign up</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
    
      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>
      
      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control'  %>
      
      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control' %>
      
      <%= f.label :password_confirmation, "Password Confirmation" %>
      <%= f.password_field :password_confirmation, class: 'form-control' %>

      <%= f.label :full_street_address, "Full Street Address" %>
      <%= f.text_field :full_street_address, class: 'form-control' %>

      <%= f.label :business_days_pickup, "How many days will you give buyers to pick up a product" %>
      <%= f.number_field :business_days_pikcup, class: 'form-control' %>

      <%= f.label :public, class: "checkbox inline" do %>
        <%= f.check_box :public %>
	<span><b>Public user?</b></span>
      <% end %>

      <%= f.submit "Create my account", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
