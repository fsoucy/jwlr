<div class="pure-g log-in">
  <div class="pure-u-1 pure-u-md-1-3"></div>
    <div class="pure-u-1 pure-u-md-1-3 log-in-form">
    <%= form_for @user, html: {class: "pure-form pure-form-stacked"} do |f| %>
      <fieldset>
        <legend>Sign Up</legend>
        <%= render 'shared/error_messages', object: f.object %>
      
	<%= f.label :profile_picture, "Upload Profile Picture" %>
        <%= f.file_field :profile_picture, :required => true %>

        <%= f.text_field :name, placeholder: 'Your name', :required => true %>

        <%= f.email_field :email, placeholder: 'Email', :required => true  %>

        <%= f.password_field :password, placeholder: 'Password', :required => true %>

        <%= f.password_field :password_confirmation, placeholder: 'Password Confirmation', :required => true %>
        
        <%= f.text_field :address_line_1, placeholder: "Address Line One", :required => true %>
        <%= f.text_field :address_line_2, placeholder: "Address Line Two", :required => false %>
        <%= f.text_field :city, placeholder: "City", :required => true %>
        <%= f.text_field :state, placeholder: "State", :required => true %>
        <%= f.text_field :zipcode, placeholder: "Zipcode", :required => true %>
               
        <%= f.submit "Create my account", class: "pure-button pure-button-primary" %>
      </fieldset>
    <% end %>
    </div>
  <div class="pure-u-1 pure-u-md-1-3"></div>
</div>
