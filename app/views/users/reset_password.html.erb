<div class="form-g log-in">
<div class="pure-u-1 pure-u-md-1-3"></div>
<div class="pure-u-1 pure-u-md-1-3 log-in-form">

    <%= form_for @user, html: {class: "pure-form pure-form-stacked"} do |f| %>
      <fieldset>
      <legend>Change your password</legend>
      <%= render 'shared/error_messages', object: f.object %>
        <%= f.password_field :password, placeholder: 'Password', :required => true %>

        <%= f.password_field :password_confirmation, placeholder: 'Password Confirmation', :required => true %>

        <%= f.submit "Change password", class: "pure-button pure-button-primary" %>
      </fieldset>
    <% end %>
</div>
<div class="pure-u-1 pure-u-md-1-3"></div>
</div>
